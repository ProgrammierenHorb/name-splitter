<Window x:Class="NameSplitter.Views.ParsedElements"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewmodels="clr-namespace:NameSplitter.ViewModels"
        d:DataContext="{d:DesignInstance Type=viewmodels:ParsedElementsViewModel}"
        mc:Ignorable="d"
        Title="ParsedElements" MinHeight="400" MinWidth="400" Height="400" Width="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10*" />
            <ColumnDefinition Width="70*" />
            <ColumnDefinition Width="5*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="5*" />
            <RowDefinition Height="30*" />
            <RowDefinition Height="30*" />
            <RowDefinition Height="30*" />
            <RowDefinition Height="10*" />
            <RowDefinition Height="5*" />
        </Grid.RowDefinitions>

        <materialDesign:PackIcon HorizontalAlignment="Center" Grid.Column="0" Grid.Row="1" Margin="0 0 0 10" Kind="Person" Width="30" Height="30" VerticalAlignment="Center" />
        <materialDesign:PackIcon HorizontalAlignment="Center" Grid.Column="0" Grid.Row="2" Margin="0 0 0 10" Kind="Person" Width="30" Height="30" VerticalAlignment="Center" />
        <materialDesign:PackIcon HorizontalAlignment="Center" Grid.Column="0" Grid.Row="3" Margin="0 0 0 10" Kind="Person" Width="30" Height="30" VerticalAlignment="Center" />
        <Button VerticalContentAlignment="Center" HorizontalAlignment="Left" Margin="10,0,0,0" Grid.Row="4" Width="100" Height="30" Content="Abbrechen" VerticalAlignment="Center"
            Command="{Binding ButtonCancle}" Background="LightGray" FontSize="12" Grid.ColumnSpan="2" />

        <TextBox Grid.Column="1" VerticalContentAlignment="Center" Grid.Row="1" Margin="0 0 0 10" Width="Auto" Height="30" Text="Titel" VerticalAlignment="Center" />
        <TextBox Grid.Column="1" VerticalContentAlignment="Center" Grid.Row="2" Margin="0 0 0 10" Width="Auto" Height="30" Text="Vorname" VerticalAlignment="Center" />
        <TextBox Grid.Column="1" VerticalContentAlignment="Center" Grid.Row="3" Margin="0 0 0 10" Width="Auto" Height="30" Text="Nachname" VerticalAlignment="Center" />
        <Button Grid.Column="1" VerticalContentAlignment="Center" Grid.Row="4" Width="100" Height="30" Content="Speichern" VerticalAlignment="Center"
            HorizontalAlignment="Right" Command="{Binding ButtonSave}" Background="LightGray" FontSize="12" />
    </Grid>
</Window>